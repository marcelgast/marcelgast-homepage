source "https://rubygems.org"

# Modern Jekyll stack (works well locally with current Ruby).
gem "jekyll", "~> 4.4"
gem "minima", "~> 2.5"

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17"
  gem "jekyll-seo-tag", "~> 2.8"
end

# Required for Ruby 3+ local Jekyll serving.
gem "webrick", "~> 1.8"

# Ruby 3.4+/4.0 no longer bundles csv by default.
gem "csv"

# Keep Liquid/Jekyll dependencies happy on newer Rubies.
gem "bigdecimal"
